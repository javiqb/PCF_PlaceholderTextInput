<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="Evidi" constructor="PlaceholderText" version="0.0.1" display-name-key="PlaceholderText" description-key="PlaceholderText description" control-type="standard" >
   
    <external-service-usage enabled="false">
    
    </external-service-usage>
   
    <property
  name="multiline"
  display-name-key="Multiline_DisplayName"
  description-key="Multiline_Description"
  of-type="TwoOptions"
  usage="input"
  required="false" />
    <property
      name="value"
      display-name-key="Value_DisplayName"
      description-key="Value_Description"
      of-type-group="stringGroup"
      usage="bound"
      required="true" />
  
    <type-group name="stringGroup">
      <type>SingleLine.Text</type>
      <type>SingleLine.TextArea</type>
      <type>SingleLine.Email</type>
  <type>SingleLine.Phone</type>
  <type>SingleLine.URL</type>
  <type>SingleLine.Ticker</type>
      <type>Multiple</type>
    </type-group>
     <!-- Maker-configurable placeholder -->
    <property
      name="placeholder"
      display-name-key="Placeholder_DisplayName"
      description-key="Placeholder_Description"
      of-type="SingleLine.TextArea"
      usage="input"
      required="false" />

      <!-- Optional: textarea rows -->
    <property
      name="rows"
      display-name-key="Rows_DisplayName"
      description-key="Rows_Description"
      of-type="Whole.None"
      usage="input"
      required="false" />

    <resources>
      <code path="index.ts" order="1"/>
      <css path="css/placeholder.css" order="1" />
    
    </resources>
   
  </control>
</manifest>
